---
import { AdminNavBar } from "@components/lit-components/admin-nav-bar";
import Card from "@components/UI/Card";
import Layout from "src/layouts/Layout.astro";
---

<Layout>
  <AdminNavBar api-path={import.meta.env.NEXT_PUBLIC_API_URI} client:load />
  <h1 class="title">管理画面</h1>

  <Card>
    <a href="/admin/inquiry">お問合せ一覧</a>
  </Card>

  <Card>
    <a href="/admin/blog">新規投稿</a>
  </Card>
</Layout>

<style scoped>
  .title {
    font-size: 1.5rem;
    border-bottom: 1px solid black;
  }

  .row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .inquiries-list {
    list-style-type: none;
    padding: 0;
    max-height: 60vh;
    overflow: auto;
  }

  .inquiries-list li {
    height: 100px;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    margin-bottom: 1rem;
    cursor: pointer;
    user-select: none;
    transition: all 0.2s;
    padding: 1rem;
    border: 1px solid white;
    border-radius: 4px;
  }

  .inquiries-list li:hover {
    background-color: #fffaf4;
  }

  .column {
    display: flex;
    flex-direction: column;
  }

  .column small {
    margin-bottom: 0.5rem;
  }

  .new {
    background-color: #fff0dd;
  }

  .new:hover {
    background-color: #ffe8ca !important;
  }
</style>
